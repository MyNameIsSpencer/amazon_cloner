<section class="product"><h2>Product Page</h2>
  <p> Name: <%= @product.name %> </p>
  <p> Description: <%= @product.description %> </p>
  <p> Price: <%= @product.price_in_dollars %> </p>
  <p> <%= link_to 'Edit', edit_product_path(@product) %> | <%= link_to 'Delete', product_path(@product), method: :delete, data: {confirm: "Are you sure?" } %> </p>

</section>
