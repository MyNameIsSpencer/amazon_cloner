<h1>Add a Product</h1>

<% if @product.errors.any?%>
  <p>Error, unable to save Product. Please check your data and try again. </p>
<%end%>

<%= link_to("Back to Products", "/Products") %>

<%= form_for(@product) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price_in_cents %><br>
    <%= f.text_field :price_in_cents %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
